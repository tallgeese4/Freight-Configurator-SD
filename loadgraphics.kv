<LoadGraphics>
    screenbutton:screenbutton
    FloatLayout:
        Button:
            text:"Volume & Weight"
            font_size:30
            size_hint:(.3, .1)
            pos_hint:{'x':0, 'y':0.9}
            on_release: app.root.current = "Volume_Weight"

        Button:
            text:"RFID"
            font_size:30
            size_hint:(.3, .1)
            pos_hint:{'x':.35, 'y':.9}
            on_release: app.root.current = "RFID"
        Button:
            id:screenbutton
            text:"Loading"
            font_size:30
            size_hint:(.3, .1)
            pos_hint:{'x':.7, 'y':.9}
            on_release: app.root.current = "stage_loading"
        Button:
            text:"Calculation"
            font_size:30
            size_hint:(.2, .1)
            pos_hint:{'x':.4, 'y':.75}
            on_release: root.Loading_Sequence()
        Button:
            text:"Bill of Lading"
            font_size:30
            size_hint:(.3, .1)
            pos_hint:{'x':.3, 'y':.0}
